<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Blog Uygulaması</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>

    <div style="display: flex; justify-content: center; align-items: center;">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            @Html.ActionLink("Blog Sitem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Blog/List">Anasayfa <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Blog/Index">Bloglar<span class="sr-only">(current)</span></a>
                    </li>
                    @*<li class="nav-item active">
                        <a class="nav-link" href="/Blog/Create">Blog Ekle<span class="sr-only">(current)</span></a>
                    </li>*@

                    <li class="nav-item active">
                        <a class="nav-link" href="/Category">Kategoriler<span class="sr-only">(current)</span></a>
                    </li>
                    @*<li class="nav-item active">
                        <a class="nav-link" href="/Category/Create">Kategori Ekle <span class="sr-only">(current)</span></a>
                    </li>*@
                </ul>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        <div class="row">
            @if (IsSectionDefined("SagKolon"))
            {
                <div class="col-md-8">
                    @RenderBody()
                </div>
                <div class="col-md-4">
                    @RenderSection("SagKolon")
                </div>
            }
            else
            {
                <div class="col-md-12">
                    @RenderBody()
                </div>
            }

        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Blog Sitem</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>