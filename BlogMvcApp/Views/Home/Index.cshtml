@model IEnumerable<BlogMvcApp.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>

<div class="row">
    <div class="col-md-8">
        @foreach (var blog in Model)
        {
        <div class="blog">
            <h3 class="page-header">
                @blog.Baslik
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @blog.EklenmeTarihi
            </p>
            <hr />
            <img class="img-responsive" src="https://www.abprojeyonetimi.com/wp-content/uploads/2019/04/blog.webp" alt="" />
            <hr />
            <p>
                @blog.Aciklama
            </p>
            <button class="btn btn-primary">Daha Fazla...</button>
        </div>
        }
    </div>
    <div class="col-md-4">
        <div class="well">
            <h4>Blog Search</h4>
            <div class="input-group">
                <input type="text" class="form-control" />
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button"></button>
                    <span class="glyphicon glyphicon-search"></span>
                </span>
            </div>
        </div>
        <div class="well">
            <h4>Blog Categories</h4>
            <div class="row">
                <div class="col-lg-6">
                    <ul class="list-unstyled">
                        <li><a href="#">Category Name</a></li>
                        <li><a href="#">Category Name</a></li>
                        <li><a href="#">Category Name</a></li>
                        <li><a href="#">Category Name</a></li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul class="list-unstyled">
                        <li><a href="#">Category Name</a></li>
                        <li><a href="#">Category Name</a></li>
                        <li><a href="#">Category Name</a></li>
                        <li><a href="#">Category Name</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>



