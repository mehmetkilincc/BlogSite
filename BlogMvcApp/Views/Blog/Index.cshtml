@model IEnumerable<BlogMvcApp.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>
<hr />  

<p>
    @Html.ActionLink("Yeni Blog Ekle", "Create",null,new { @class = "btn btn-primary" } )
</p>
<hr />  
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.Resim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Onay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anasayfa)
        </th>
        <th style="width:205px"></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.KategoriAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Resim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EklenmeTarihi)
        </td>
        <td>
            @if (item.Onay)
            {
                <label class="badge bg-success">Onaylı</label>
            }
            else
            {
                <label class="badge bg-danger">Onay Bekliyor</label>
            }
        </td>
        <td>
            @if (item.Anasayfa)
            {
                <label class="badge bg-success">Anasayfa</label>
            }
            else
            {
                <label class="badge bg-danger">Anasayfa Değil</label>   
            }
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new{ @class="btn btn-warning btn-sm"} )
            @Html.ActionLink("Detaylar", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Sil", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
